<!--index.wxml-->
<view class="container {{pageCondition}}">
  <block>
    <view class="userinfo">
      <block wx:if="{{hasUserInfo === null||hasUserInfo === false}}">
        <button bindgetuserinfo="getUserInfo" open-type='getUserInfo' class="userinfo-avatar minipro-img" background-size="cover"></button>
      </block>
      <block wx:else>
        <button bindgetuserinfo="getUserInfo" open-type='getUserInfo' class="userinfo-avatar" style="background-image:url({{userInfo.avatarUrl}})" background-size="cover"></button>
        <text class="userinfo-nickname"><text class="nickname">{{userInfo.nickName}}</text></text>
      </block>
    </view>
    <view wx:if="{{hasUserInfo === null}}"class="getUserInfo">
      <button class="getUserInfo-button iconfont icon-user" hover-class="active-button" open-type='getUserInfo' bindgetuserinfo='getUserInfo'></button>
    </view>
    <view wx:else class="gamestart">
      <button class="gamestart-button iconfont icon-play" hover-class="active-button" bindtap='bindPlayTap' disabled='{{gameStartDisable}}'></button>
    </view>
  </block>
</view>