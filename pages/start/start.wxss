/**index.wxss**/
.container{
  transition:opacity 0.25s ease;
  opacity:0;
  padding: 20vh 0 30vh;
}

.page-in{
  opacity:1;
}

.page-out{
  opacity:0;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: 100% 100%;
  background-position: center center;
}

.userinfo-nickname {
  color: rgba(0,255,181,1);
}

.gamestart-button, .getUserInfo-button{
  font-size:70rpx;
  line-height:70rpx;
  padding:40rpx 0;
  border:0px solid transparent;
  height:150rpx;
  width:150rpx;
  text-align:center;
  overflow:hidden;
  border-radius:50%;
  background:rgba(255,255,255,1);
  color:rgba(0,255,181,1);
  box-shadow:0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12);
  transition:all 0.25s ease;
}
.gamestart-button{
  padding:42rpx 0 38rpx;
}

.active-button{
  background-color:rgba(0,0,0,.2);
  box-shadow:0 0px 0px 0 rgba(0,0,0,.16) inset,0 0px 0px 0 rgba(0,0,0,.12) inset;
}

#background{
  display:block;
  position:fixed;
  top:0;
  left:0;
  height:100vh;
  width:750rpx;
  z-index:-999;
}
