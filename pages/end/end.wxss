/**play.wxss**/
.scoreboard {
  margin-top: 50px;
  color: #aaa;
}
.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin:50rpx;
  padding:0;
}
.level{
  font-size:16px;
}
.score{
  font-size:100px;
  line-height: 100px;
  padding-top: 5px;
}
.ratio{
  font-size:12px;
}
.review{
  margin: 50rpx;
  width:500rpx;
  border: 15rpx dashed white;
  border-radius: 50rpx;
  padding:50rpx;
  font-size: 20px;
  line-height: 30px;
}
.review-content{
  border-bottom: 1px solid rgba(255,255,255,.4);
}
.nickname{
  color: rgba(0,255,181,1)
}
.level, .score, .ratio, .review{
  flex-grow: 1;
}
.retry{
  flex-grow: 3;
}
.retry-button{
  font-size:50rpx;
  line-height:50rpx;
  padding:50rpx 0;
  border:0px solid transparent;
  height:50rpx;
  width:150rpx;
  text-align:center;
  overflow:hidden;
  border-radius:50%;
  background:rgba(255,255,255,1);
  color:rgba(0,255,181,1);
  box-shadow:0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12);
  transition:all 0.25s ease;
}